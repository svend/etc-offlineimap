[general]
accounts = gmail, uw
maxsyncaccounts = 2
metadata = ~/.cache/offlineimap
pythonfile = ~/.offlineimap.py

# Ciffer

[Account ciffer]
localrepository = ciffer-local
remoterepository = ciffer

[Repository ciffer-local]
type = Maildir
localfolders = ~/Maildir

[Repository ciffer]
type = IMAP
preauthtunnel = ssh -o "IdentityFile ~/.ssh/id_rsa-imap" imap.ciffer.net MAIL=\$HOME/Maildir /usr/lib/dovecot/imap --exec-mail imap
nametrans = dovecot_nametrans

# Gmail

[Account gmail]
localrepository = gmail-local
remoterepository = gmail
autorefresh=5
presynchook = cd ~/.local/share/offlineimap/repo/gmail && nice ionice -c3 git annex sync
postsynchook = cd ~/.local/share/offlineimap/repo/gmail && nice ionice -c3 ~/bin/git-autocommit && nice ionice -c3 git annex sync

[Repository gmail-local]
type = Maildir
localfolders = ~/.local/share/offlineimap/repo/gmail

[Repository gmail]
type = Gmail
remoteuser = svend@ciffer.net
nametrans = gmail_nametrans
# Only sync 'All Mail' folder
folderfilter = lambda foldername: foldername in ['[Gmail]/All Mail']
#readonly = True

# UW

[Account uw]
localrepository = uw-local
remoterepository = uw
autorefresh=5
presynchook = cd ~/.local/share/offlineimap/repo/uw && nice ionice -c3 git annex sync
postsynchook = cd ~/.local/share/offlineimap/repo/uw && nice ionice -c3 ~/bin/git-autocommit && nice ionice -c3 git annex sync

[Repository uw-local]
type = Maildir
localfolders = ~/.local/share/offlineimap/repo/uw

[Repository uw]
type = IMAP
remotehost = svends.deskmail.washington.edu
ssl = yes
remoteuser = svends
reference = mail
nametrans = uw_nametrans
# Skip mail, which is not a mail folder, and archive folders
folderfilter = lambda foldername: not re.search('(^mail$|/archive$)', foldername)
# Include INBOX, which is not under mail
folderincludes = ['INBOX']
#readonly = True
